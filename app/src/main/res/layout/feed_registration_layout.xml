<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:text="사진 등록(최대 5장)"
        android:layout_marginTop="32dp"
        style="@style/Registration_Text_View"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp">

        <ImageButton
            style="@style/Picture_Background_Values"/>

        <ImageButton
            style="@style/Picture_Background_Values"/>

        <ImageButton
            style="@style/Picture_Background_Values"/>

        <ImageButton
            style="@style/Picture_Background_Values"/>

        <ImageButton
            style="@style/Picture_Background_Values"/>

    </LinearLayout>

    <TextView
        android:text="글 작성"
        android:layout_marginTop="28dp"
        style="@style/Registration_Text_View"/>

    <EditText
        android:hint="이번에 만든 음식은 “”인데 아직 제대로 되지는 않았지만
한번 시도해보면서 연습을 하였습니다."
        style="@style/Registration_Edit_Box_Writing"/>

    <TextView
        android:text="해시태그"
        android:layout_marginTop="12dp"
        style="@style/Registration_Text_View"/>

    <EditText
        android:hint="태그를 띄어쓰기 없이 입력해주세요. ex) #메뉴개발중"
        style="@style/Registration_Edit_Box_Single"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/Hashtag_Value"
                android:text="#메뉴개발중" />

            <TextView
                style="@style/Hashtag_Value"
                android:text="#한번드셔보셔유" />

            <TextView
                style="@style/Hashtag_Value"
                android:text="#대박" />

            <TextView
                style="@style/Hashtag_Value"
                android:text="#달짝지근해유" />


        </LinearLayout>

    </HorizontalScrollView>


    <!-- java 코드로 button의 위치를 고정시켜주는 것이 좋다.-->
    <Button
        android:layout_marginTop="14dp"
        android:text="작성 완료"
        style="@style/Custom_Bottom_Button" />


</LinearLayout>