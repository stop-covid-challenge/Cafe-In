<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="프로필 이름"
        android:layout_marginTop="32dp"
        style="@style/Registration_Text_View"/>

    <EditText
        android:hint="ex) jinsung_guri"
        style="@style/Registration_Edit_Box_Single"/>

    <TextView
        android:text="프로필 소개말"
        android:layout_marginTop="20dp"
        style="@style/Registration_Text_View"/>

    <EditText
        android:hint="ex) 제 프로필에 오신걸 환영합니다"
        style="@style/Registration_Edit_Box_Single"/>

    <TextView
        android:text="주 활동 회원 분류"
        android:layout_marginTop="20dp"
        style="@style/Registration_Text_View"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <CheckBox
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:button="@android:color/transparent"
            android:background="@drawable/custom_circle_checkbox" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기업"
            android:textSize="14dp"
            android:textColor="@android:color/black"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="22dp" />

        <CheckBox
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:button="@android:color/transparent"
            android:background="@drawable/custom_circle_checkbox" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개인"
            android:textSize="14dp"
            android:textColor="@android:color/black"
            android:layout_marginLeft="8dp" />

    </LinearLayout>

    <TextView
        android:text="주소"
        android:layout_marginTop="20dp"
        style="@style/Registration_Text_View"/>

    <EditText
        android:hint="ex) 서울시 광진구"
        style="@style/Registration_Edit_Box_Single"/>

    <TextView
        android:text="상세 주소"
        android:layout_marginTop="20dp"
        style="@style/Registration_Text_View"/>

    <EditText
        android:hint="ex) 건대입구역 2출 엔젤리너스"
        style="@style/Registration_Edit_Box_Single"/>

    <TextView
        android:text="핸드폰 번호"
        android:layout_marginTop="20dp"
        style="@style/Registration_Text_View"/>

    <EditText
        android:hint="ex) 010-6770-1048"
        style="@style/Registration_Edit_Box_Single"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="24dp"
        android:textSize="14dp"
        android:textColor="@android:color/black"
        android:text="*내용을 입력하지 않으면 가입이 진행되지 않습니다."  />

    <!-- java 코드로 button의 위치를 고정시켜주는 것이 좋다.-->
    <Button
        android:layout_marginTop="32dp"
        android:text="설정 완료"
        style="@style/Custom_Bottom_Button" />

</LinearLayout>