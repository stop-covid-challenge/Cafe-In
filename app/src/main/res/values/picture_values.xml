<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Picture_Background_Values">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:padding">25dp</item>
        <item name="android:background">@drawable/picture_background</item>
        <item name="android:src">@drawable/picture_registration</item>
    </style>

    <style name="Picture_Background_Login">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:padding">60dp</item>
        <item name="android:background">@drawable/picture_background</item>
        <item name="android:src">@drawable/picture_registration</item>
    </style>

    <style name="Home_Subscribe_Picture">
        <item name="android:layout_width">100dp</item>
        <item name="android:maxWidth">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:maxHeight">100dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@drawable/home_subscribe_picture</item>
    </style>

</resources>